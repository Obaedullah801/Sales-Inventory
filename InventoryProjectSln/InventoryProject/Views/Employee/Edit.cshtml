@using System.Web.Mvc.Html

@model Models.Employee
@{
    Layout = "~/Views/Dashboard/DashBoard.cshtml";
}


<ul class="breadcrumb">
    <li>
        <i class="icon-home"></i>
        <a href="~/Dashboard/Dashboard">Home</a>
        <i class="icon-angle-right"></i>
    </li>
    <li><a href="#">Employee</a></li>
</ul>

<div class="box span6">
    <div class="box-header" data-original-title>
        <h2><i class="halflings-icon edit"></i><span class="break"></span>Employee Form</h2>
        <div class="box-icon">
            <a href="#" class="btn-setting"><i class="halflings-icon wrench"></i></a>
            <a href="#" class="btn-minimize"><i class="halflings-icon chevron-up"></i></a>
            <a href="#" class="btn-close"><i class="halflings-icon remove"></i></a>
        </div>
    </div>
    <div class="box-content">

        <form method="POST">

            <div class="container">

                <div class="form-horizontal">
                    @Html.ValidationSummary(true, null, new { @class = "text-danger" })


                    <div class="form-group">
                        <label for="Name" class="col-md-6">
                            @if (ViewBag.Msg == "Success")
                            {
                                <span style="color: green" class="text-center">Successfully Updated!</span>
                            }
                            else if (ViewBag.Msg == "Failed")
                            {
                                <span style="color: red" class="text-center"> Sorry failed!</span>
                            }
                        </label>
                        <div class="col-md-6">
                        </div>

                    </div>
                    @*<div class="form-group">
            <label for="Name" class="col-md-4">Id</label>
            <div class="col-md-8">
                @Html.TextBoxFor(c => c.Id, new { @class = "form-control input-xlarge", id = "OrgName" })
            </div>
            @Html.ValidationMessageFor(c => c.Id, null, new { @class = "help-inline", style = "color:red" })
        </div>*@

                    <div class="form-group">
                        <label for="Name" class="col-md-4">Name</label>
                        <div class="col-md-8">
                            @Html.TextBoxFor(c => c.Name, new { @class = "form-control input-xlarge", id = "OrgName" })
                        </div>
                        @Html.ValidationMessageFor(c => c.Name, null, new { @class = "help-inline", style = "color:red" })
                    </div>
                    <div class="form-group">
                        <label for="Code" class="col-md-4">Code</label>
                        <div class="col-md-8">
                            @Html.TextBoxFor(c => c.Code, new { @class = "form-control input-xlarge", id = "OrgName" })
                        </div>
                        @Html.ValidationMessageFor(c => c.Code, null, new { @class = "help-inline", style = "color:red" })
                    </div>
                    <div class="form-group">
                        <label for="NationalId" class="col-md-2">NationalId</label>
                        <div class="col-md-10">
                            @Html.TextBoxFor(c => c.NationalId, new { @class = "form-control input-xlarge" })
                        </div>
                        @Html.ValidationMessageFor(c => c.NationalId, null, new { @class = "help-inline", style = "color:red" })
                    </div>
                    <div class="form-group">
                        <label for="ContactNo" class="col-md-2">Contact No</label>
                        <div class="col-md-10">
                            @Html.TextBoxFor(c => c.ContactNo, new { @class = "form-control input-xlarge" })
                            @Html.ValidationMessageFor(c => c.ContactNo)
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="Address" class="col-md-2">Email</label>
                        <div class="col-md-10">
                            @Html.TextAreaFor(c => c.Email, new { @class = "form-control input-xlarge" })
                            @Html.ValidationMessageFor(c => c.Email)
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="Address" class="col-md-2">Address</label>
                        <div class="col-md-10">
                            @Html.TextAreaFor(c => c.Address, new { @class = "form-control input-xlarge" })
                            @Html.ValidationMessageFor(c => c.Address)
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="BasicSalary" class="col-md-2">BasicSalary</label>
                        <div class="col-md-10">
                            @Html.TextAreaFor(c => c.BasicSalary, new { @class = "form-control input-xlarge" })
                            @Html.ValidationMessageFor(c => c.BasicSalary)
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="About" class="col-md-2">City</label>
                        <div class="col-md-10">
                            @Html.TextAreaFor(c => c.OpeningBalance, new { @class = "form-control input-xlarge" })
                            @Html.ValidationMessageFor(c => c.OpeningBalance)
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="IsDeleted" class="col-md-2">Is Deleted</label>
                        <div class="col-md-10">
                            @Html.TextBoxFor(c => c.IsDeleted, new { @class = "form-control input-xlarge" })
                            @Html.ValidationMessageFor(c => c.IsDeleted)
                        </div>
                    </div>

                    <br />
                    <div class="form-group">
                        <input type="submit" class="btn btn-primary col-md-offset-2" value="Save Changes" />
                    </div>
                </div>
            </div>
        </form>

    </div>
</div>