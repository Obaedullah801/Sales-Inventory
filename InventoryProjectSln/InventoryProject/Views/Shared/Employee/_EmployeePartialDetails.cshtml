


<table class="table table-striped table-bordered bootstrap-datatable datatable">
    <thead>
        <tr>
            <th>SL</th>
            <th>Code</th>
            <th>Employee Name</th>
            <th>National Id</th>
            <th>Contact No</th>
            <th>Email</th>
            <th>Address</th>
            <th>Basic Salary</th>
            <th>Opening Balance</th>

        </tr>
    </thead>
    <tbody>
    @if (Model != null && Model.Employees != null && Model.Employees.Count> 0)
    {
        var id = 4;
        foreach (var Employee in Model.Employees)
        {
        <tr>

            <td>@(id--)</td>
            <td class="center">@Employee.Code</td>
            <td class="center">@Employee.Name</td>
            <td class="center">@Employee.NationalId</td>
            <td class="center">@Employee.ContactNo</td>
            <td class="center">@Employee.Email</td>
            <td class="center">@Employee.Address</td>
            <td class="center">@Employee.BasicSalary</td>
            <td class="center">@Employee.OpeningBalance</td>


            <td class="center" width="250">
                <a class="btn btn-success" href="/Employee/Details/@Employee.Id">
                    <i class="halflings-icon white zoom-in"></i>
                </a>
                <a class="btn btn-info" href="/Employee/Edit/@Employee.Id">
                    <i class="halflings-icon white edit"></i>
                </a>
                @*<a class="btn btn-danger" href="/Client/Delete/@client.Id">
                <i class="halflings-icon white trash"></i>
            </a>*@
            </td>
        </tr>
        }

    }


    </tbody>
</table>



