@using System.Web.Mvc.Html


@model InventoryProject.Models.Division
@{
    Layout = "~/Views/Dashboard/DashBoard.cshtml";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <ul class="breadcrumb">
        <li>
            <i class="icon-home"></i>
            <a href="~/Dashboard/Dashboard">Home</a>
            <i class="icon-angle-right"></i>
        </li>
        <li><a href="#">Division</a></li>
    </ul>

    <div class="box span6">
        <div class="box-header" data-original-title>
            <h2><i class="halflings-icon edit"></i><span class="break"></span>Client Form</h2>
            <div class="box-icon">
                <a href="#" class="btn-setting"><i class="halflings-icon wrench"></i></a>
                <a href="#" class="btn-minimize"><i class="halflings-icon chevron-up"></i></a>
                <a href="#" class="btn-close"><i class="halflings-icon remove"></i></a>
            </div>
        </div>
        <div class="box-content">

            <form method="POST">

                <div class="container">

                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, null, new {@class = "text-danger"})


                        <div class="form-group">
                            <label for="Name" class="col-md-6">
                                @if (ViewBag.Msg == "Success")
                                {
                                    <span style="color: green" class="text-center">Successfully Updated!</span>
                                }
                                else if (ViewBag.Msg == "Failed")
                                {
                                    <span style="color: red" class="text-center"> Sorry failed!</span>
                                }
                            </label>
                            <div class="col-md-6">
                            </div>

                        </div>
                        <div class="form-group">
                            <label for="Name" class="col-md-4">Id</label>
                            <div class="col-md-8">
                                @Html.TextBoxFor(c => c.DivisionID, new {@class = "form-control input-xlarge", id = "OrgName"})
                            </div>
                            @Html.ValidationMessageFor(c => c.DivisionID, null, new {@class = "help-inline", style = "color:red"})
                        </div>
                        <div class="form-group">
                            <label for="Name" class="col-md-4">Name</label>
                            <div class="col-md-8">
                                @Html.TextBoxFor(c => c.DivisionName, new {@class = "form-control input-xlarge", id = "OrgName"})
                            </div>
                            @Html.ValidationMessageFor(c => c.DivisionName, null, new {@class = "help-inline", style = "color:red"})
                        </div>

                        <br/>
                        <div class="form-group">
                            <input type="submit" class="btn btn-primary col-md-offset-2" value="Save Changes"/>
                        </div>
                    </div>
                </div>
            </form>

        </div>
    </div>
}