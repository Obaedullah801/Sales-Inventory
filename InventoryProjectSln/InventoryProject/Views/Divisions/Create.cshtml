
@{
    ViewBag.Title = "Create";
}

<h2></h2>


@using System.Web.Mvc.Html
@model InventoryProject.Models.Division

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <ul class="breadcrumb">
        <li>
            <i class="icon-home"></i>
            <a href="~/DashBoard/DashBoard">Home</a>
            <i class="icon-angle-right"></i>
        </li>
        <li><a href="#">Division</a></li>
    </ul>

    <div class="box span4">
        <div class="box-header" data-original-title>
            <h2><i class="halflings-icon edit"></i><span class="break"></span>Client Form</h2>
            <div class="box-icon">
                <a href="#" class="btn-setting"><i class="halflings-icon wrench"></i></a>
                <a href="#" class="btn-minimize"><i class="halflings-icon chevron-up"></i></a>
                <a href="#" class="btn-close"><i class="halflings-icon remove"></i></a>
            </div>
        </div>
        <div class="box-content">
            <form method="POST" id="DivisionCreateForm">

                <div class="container">

                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, null, new {@class = "text-danger"})
                        @*<div class="form-group">
                                <label for="Name" class="col-md-4">District Code</label>
                                <div class="col-md-8">
                                    @Html.TextBoxFor(c => c.DistrictId, new { @class = "form-control input-xlarge", id = "OrgName" })

                                </div>
                                @Html.ValidationMessageFor(c => c.DistrictId, null, new { @class = "help-inline", style = "color:red" })
                            </div>*@
                        <div class="form-group">
                            <label for="Name" class="col-md-4">Name</label>
                            <div class="col-md-8">
                                @Html.TextBoxFor(c => c.DivisionName, new {@class = "form-control input-xlarge", id = "OrgName"})

                            </div>
                            @Html.ValidationMessageFor(c => c.DivisionName, null, new {@class = "help-inline", style = "color:red"})
                        </div>

                        <br/>
                        <div class="form-group">
                            <input type="submit" class="btn btn-primary col-md-offset-2"/>
                            <span class="custom_loader">
                                <i class="fa fa-refresh fa-spin"></i>
                                Saving please Wait ...
                            </span>
                            <div class="msgSaved" style="color: green" class="text-center"></div>
                            <div class="msgNotSaved" style="color: red" class="text-center"></div>
                        </div>
                    </div>
                </div>
            </form>

        </div>
    </div>

    <div class="box span7">
        <div class="box-header" data-original-title>
            <h2><i class="halflings-icon user"></i><span class="break"></span>Last Five Entries Division </h2>
            <div class="box-icon">
                <a href="#" class="btn-setting"><i class="halflings-icon wrench"></i></a>
                <a href="#" class="btn-minimize"><i class="halflings-icon chevron-up"></i></a>
                <a href="#" class="btn-close"><i class="halflings-icon remove"></i></a>
            </div>
        </div>
        <div class="box-content">
            <div id="Details">
            </div>
        </div>
    </div>
}
    
    
    <script type="text/javascript" language="javascript">

        $(document).ready(function () {


            function Details() {

                $.ajax({
                    type: "POST",
                    url: "../../Division/Details",
                    contentType: "application/JSON; charset=utf-8",
                    data: JSON.stringify(),
                    success: function (data) {

                        $("#Details").html(data);
                        $(".custom_loader").hide();

                    }

                });

            }

            Details();


        });



        $.validator.unobtrusive.parse(document);
    </script>